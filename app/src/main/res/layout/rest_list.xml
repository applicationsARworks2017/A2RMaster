<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/rel_requsetservice"
        android:layout_height="100dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_centerVertical="true"
            android:id="@+id/iv_logo"
            android:background="@drawable/logo_master"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_logo"
            android:layout_marginLeft="20dp"
            android:text=""
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:id="@+id/tv_rest_name"
            android:textColor="@color/black"/>
        <ImageView
            android:id="@+id/rest_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/ic_mode_edit_black_24dp"
            android:backgroundTint="@color/colorPrimaryDark"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_logo"
            android:layout_below="@id/tv_rest_name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="40dp"
            android:id="@+id/details"
            android:text=""/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="40dp"
            android:background="@color/colorPrimaryDark">
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>