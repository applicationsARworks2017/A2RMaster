<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="0dp"
            android:id="@+id/rel_requsetservice"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="ddd"
                android:textStyle="bold"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:id="@+id/tv_rest_name"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/tv_rest_name"
                android:layout_marginTop="0dp"
                android:layout_marginRight="40dp"
                android:id="@+id/gst_number"
                android:text="ddd"/>
            <ImageView
                android:id="@+id/edit_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:layout_marginRight="15dp"
                android:visibility="visible"
                android:layout_alignParentRight="true"
                android:background="@mipmap/ic_mode_edit_black_24dp"
                android:backgroundTint="@color/colorPrimaryDark"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/gst_number"
                android:layout_marginTop="0dp"
                android:layout_marginRight="40dp"
                android:id="@+id/tax_name"
                android:singleLine="true"
                android:text="ddd"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/tax_name"
                android:layout_marginTop="0dp"
                android:layout_marginRight="40dp"
                android:id="@+id/gst_value"
                android:text="ddd"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/gst_value"
                android:layout_marginTop="0dp"
                android:layout_marginRight="40dp"
                android:id="@+id/effect_from"
                android:layout_marginBottom="5dp"
                android:text="ddd"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rel_requsetservice"
            android:layout_marginLeft="10dp"
            android:visibility="visible"
            android:background="@color/colorPrimaryDark">
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>